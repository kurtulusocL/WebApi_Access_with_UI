@model IEnumerable<VisitorDto>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <h3>@ViewData["Title"]</h3>
        <hr />
        <a asp-controller="Visitor" asp-action="Create" class="btn btn-outline-primary">+ Add New One</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Name Surname</th>
                    <th>Identity No.</th>
                    <th>Email Address</th>
                    <th>Phone Number</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NameSurname</td>
                        <td>@item.IdentityNo</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>
                            <a asp-controller="Visitor" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Detail</a>
                            <a asp-controller="Visitor" asp-action="Edit" asp-route-id="@item.Id"  class="btn btn-outline-success btn-sm">Edit</a>
                            <a asp-controller="Visitor" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>